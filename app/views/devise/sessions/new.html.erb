<div class="mt-8 text-center">
  <h2 class="text-2xl font-bold mb-6">Log in</h2>

  <div class="card max-w-lg mx-auto p-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block mb-2 font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block mb-2 font-medium" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= f.submit "Log in", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="mt-4 text-sm">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
