<div>
  <div class="flex justify-between items-center mb-6">
    <div>
      <%= link_to projects_path, class: "btn btn-sm btn-outline mb-2" do %>
        ‚Üê Back to Projects
      <% end %>
      <h1 class="text-3xl font-bold"><%= @project.name %></h1>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_project_path(@project), class: "btn btn-sm" %>
      <%= button_to "Delete", project_path(@project), method: :delete, class: "btn btn-sm btn-error", data: { confirm: "Are you sure you want to delete this project?" } %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Main project details -->
    <div class="md:col-span-2">
      <div class="card p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">Description</h2>
        <% if @project.description.present? %>
          <p class="mb-4"><%= @project.description %></p>
        <% else %>
          <p class="text-gray-500 mb-4">No description provided.</p>
          <%= link_to "Add Description", edit_project_path(@project), class: "btn btn-sm" %>
        <% end %>
      </div>
      
      <!-- Future: Tasks section will go here -->
      <div class="card p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold">Tasks</h2>
          <button class="btn btn-sm btn-primary">Add Task</button>
        </div>
        <p class="text-gray-500">Task management feature coming soon.</p>
      </div>
    </div>
    
    <!-- Project sidebar -->
    <div class="md:col-span-1">
      <div class="card p-6 mb-6">
        <h3 class="text-lg font-semibold mb-3">Project Details</h3>
        <div class="mb-4">
          <div class="text-sm text-gray-500 mb-1">Created</div>
          <div><%= @project.created_at.strftime("%B %d, %Y at %I:%M %p") %></div>
        </div>
        <div class="mb-4">
          <div class="text-sm text-gray-500 mb-1">Last Updated</div>
          <div><%= @project.updated_at.strftime("%B %d, %Y at %I:%M %p") %></div>
        </div>
        <div>
          <div class="text-sm text-gray-500 mb-1">Owner</div>
          <div><%= @project.user.email %></div>
        </div>
      </div>
      
      <!-- Future: Team members section will go here -->
      <div class="card p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-semibold">Team Members</h3>
          <button class="btn btn-sm">Invite</button>
        </div>
        <p class="text-gray-500">Team collaboration feature coming soon.</p>
      </div>
    </div>
  </div>
</div>
